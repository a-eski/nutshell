{
  "name": "minimal",
  "description": "Minimalist theme with simpler formatting",
  "colors": {
    "reset": "\u001b[0m",
    "primary": "\u001b[1;36m",
    "secondary": "\u001b[0;37m",
    "error": "\u001b[0;31m",
    "warning": "\u001b[0;33m",
    "info": "\u001b[0;34m",
    "success": "\u001b[0;32m"
  },
  "prompt": {
    "left": {
      "format": "{primary}{directory}{reset}"
    },
    "right": {
      "format": ""
    },
    "multiline": false,
    "prompt_symbol": "$ ",
    "prompt_symbol_color": "reset"
  },
  "segments": {
    "directory": {
      "format": "{directory}",
      "commands": {
        "directory": "pwd | sed \"s|$HOME|~|\""
      }
    }
  }
}
