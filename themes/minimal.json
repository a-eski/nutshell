{
  "name": "minimal",
  "description": "Minimalist theme with simpler formatting",
  "colors": {
    "reset": "\u001b[0m",
    "primary": "\u001b[1;36m",
    "secondary": "\u001b[0;37m",
    "error": "\u001b[0;31m",
    "warning": "\u001b[0;33m",
    "info": "\u001b[0;34m",
    "success": "\u001b[0;32m"
  },
  "prompt": {
    "left": {
      "format": "{primary}{directory}{reset}"
    },
    "right": {
      "format": ""
    },
    "multiline": false,
    "prompt_symbol": "$ ",
    "prompt_symbol_color": "reset"
  },
  "segments": {
    "git_branch": {
      "enabled": true,
      "format": "{info}[{branch}]{reset} ",
      "commands": {
        "branch": "git branch --show-current 2>/dev/null"
      }
    },
    "python_env": {
      "enabled": true,
      "format": "{warning}({env_name}){reset} ",
      "commands": {
        "env_name": "echo $CONDA_DEFAULT_ENV || echo $VIRTUAL_ENV | sed 's|.*/||' 2>/dev/null"
      }
    },
    "directory": {
      "format": "{directory}",
      "commands": {
        "directory": "pwd | sed \"s|$HOME|~|\""
      }
    }
  }
}
